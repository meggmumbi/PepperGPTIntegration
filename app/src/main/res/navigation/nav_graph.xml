<!--                android:name="childId"-->
<!--                app:argType="string" />-->
<!--        </action>-->

<!--        <action-->
<!--            android:id="@+id/action_childListFragment_to_therapySessionFragment"-->
<!--            app:destination="@id/therapySessionFragment">-->
<!--            <argument-->
<!--                android:name="childId"-->
<!--                app:argType="string" />-->
<!--        </action>-->

        <action
            android:id="@+id/action_childListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>