<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/asd_popup_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Calm, non-threatening incorrect indicator -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:lottie_rawRes="@raw/asd_try_again"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_speed="0.7"/>

        <!-- Neutral phrasing with consistent styling -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TRY AGAIN"
            android:textColor="@color/asd_neutral_text"
            android:textSize="24sp"
            android:fontFamily="@font/asd_simple_font"
            android:letterSpacing="0.05"
            android:textAllCaps="true"/>

        <!-- Encouraging message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="You can do it!"
            android:textColor="@color/asd_primary_text"
            android:textSize="18sp"
            android:fontFamily="@font/asd_simple_font"/>

    </LinearLayout>
</FrameLayout>